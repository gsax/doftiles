# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /home/gsx/Pictures/BlackLagoon/4518382-black-lagoon-sun-rays-anime-girls-pacific-ocean-pistol-palm-trees-revy.png fill

output LVDS-1 pos 0 0 res 1366x768
output HDMI-A-2 pos 0 769 res 1920x1080

# wob indicator bar
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob

# show battery status
bindsym $mod+b \
    exec notify-send \
    -u low \
    -i /usr/share/icons/Dracula/symbolic/devices/battery-symbolic.svg \
    "$(cat /sys/class/power_supply/BAT0/status)" \
    "$(cat /sys/class/power_supply/BAT0/capacity)%"

# Multimediakeys
#
# Audio
bindsym --locked XF86AudioRaiseVolume \
    exec pactl set-sink-volume @DEFAULT_SINK@ +5% && \
    pactl get-sink-volume @DEFAULT_SINK@ | head -n 1 | \
    awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
bindsym --locked XF86AudioLowerVolume \
    exec pactl set-sink-volume @DEFAULT_SINK@ -5% && \
    pactl get-sink-volume @DEFAULT_SINK@ | head -n 1 | \
    awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
bindsym --locked XF86AudioMute \
    exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym --locked XF86AudioMicMute \
    exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Brightness
bindsym --locked XF86MonBrightnessUp \
    exec brightnessctl -e s +2% && brightnessctl info | \
    sed -ne 's/^.*(//' -e 's/%).*$//p' > $WOBSOCK
bindsym --locked XF86MonBrightnessDown \
    exec brightnessctl -e s 2%- && brightnessctl info | \
    sed -ne 's/^.*(//' -e 's/%).*$//p' > $WOBSOCK
# lock screen
bindsym XF86HangupPhone exec swaylock -f
# suspend to ram and hibernate when
# the battery falls below 5% or is in suspend for over 2 hours
bindsym XF86Favorites exec swaylock -f && systemctl suspend-then-hibernate
# lock when closing the lid
bindswitch --reload --locked lid:on exec swaylock -f

# touchpad config
input "2:14:ETPS/2_Elantech_Touchpad" {
    # disable while typing
    dwt enabled
    # tap for click
    tap enabled
    # pressing both buttons emeulates middle button
    middle_emulation enabled
}
